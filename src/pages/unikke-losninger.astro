---
// src/pages/unikke-losninger.astro
import BaseLayout from '../layout/BaseLayout.astro';
import SpecialHero from '@features/specials/SpecialHero.astro';
import SolutionSection from '@features/specials/SolutionSection.astro';
import { SOLUTIONS } from '@features/specials/solutions.data';
import TrustSection from '@features/trust/TrustSection.astro';
import ContactSection from '@features/contact/ContactSection.astro';
import SpecialIntermezzo from '@features/specials/SpecialIntermezzo.astro';
---

<BaseLayout title="Unikke løsninger – LogicNodes">
  <SpecialHero />

  {SOLUTIONS.map((solution, i) => (
    <>
      <SolutionSection solution={solution} index={i} />
  
      {/* Indsæt CTA-sektionen efter special #2 — juster index efter behov */}
      {i === 1 && <SpecialIntermezzo />}
    </>
  ))}
  <ContactSection />
</BaseLayout>