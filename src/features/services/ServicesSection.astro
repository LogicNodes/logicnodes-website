---
import { CARDS } from './cards.data';
import Card from '@components/Card.astro';
import ServicesGraphic from './ServicesGraphic.tsx';
import './services.css';
---
<section id="services" class="bg-ln-dark py-section px-gutter text-white">
  <div
    class="max-w-7xl mx-auto grid gap-16 lg:grid-cols-[minmax(0,45%)_minmax(320px,55%)]">
    <!-- ─────────────── GRAPHIC (desktop only) ─────────────── -->
    <div class="hidden lg:block">
      <ServicesGraphic client:only="react" />
    </div>

    <!-- ─────────────── CARDS ─────────────── -->
    <div class="space-y-10">
      <h2 class="text-heading-lg font-extrabold leading-tight">
        <span class="block uppercase tracking-wider text-sm mb-1 text-ln-accent">
          LogicNodes kan
        </span>
        hjælpe din virksomhed med
      </h2>

      <div class="flex flex-col gap-6">
        {CARDS.map((c, i) => (
          <Card
            tight
            class="service-card bg-white text-ln-dark p-6 rounded-2xl space-y-2 shadow-xl"
          >
            <h3 class="font-bold text-heading-md text-ln-accent">{c.title}</h3>
            <p class="text-body">{c.body}</p>
          </Card>
        ))}
      </div>
    </div>
  </div>
</section> 