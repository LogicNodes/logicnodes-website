---
// src/features/ekspertise/FAQSection.astro
import { FAQ_ITEMS } from './ekspertise.data';
---

<section class="bg-ln-light py-section px-gutter">
  <div class="max-w-4xl mx-auto space-y-12">
    <!-- Sektion overskrift -->
    <div class="text-center space-y-4">
      <h2 class="text-heading-lg font-extrabold text-ln-dark">
        Ofte stillede spørgsmål
      </h2>
      <p class="text-body text-ln-dark/80">
        Find svar på de mest almindelige spørgsmål om vores AI-ekspertise
      </p>
    </div>

    <!-- FAQ items -->
    <div class="space-y-6">
      {FAQ_ITEMS.map((item, index) => (
        <details class="group bg-white rounded-2xl overflow-hidden shadow-xl">
          <summary class="flex items-center justify-between p-6 cursor-pointer hover:bg-gray-50 transition-colors">
            <h3 class="text-heading-sm font-bold text-ln-dark pr-4">
              {item.question}
            </h3>
            <span class="text-ln-accent text-2xl group-open:rotate-45 transition-transform duration-200">
              +
            </span>
          </summary>
          <div class="px-6 pb-6">
            <p class="text-body text-ln-dark/80 leading-relaxed">
              {item.answer}
            </p>
          </div>
        </details>
      ))}
    </div>
  </div>
</section>

<style>
  /* Fjern standard browser styling for details/summary */
  details summary::-webkit-details-marker {
    display: none;
  }
  
  details summary::marker {
    display: none;
  }
</style>
