---
export interface Props { 
  tight?: boolean;
  class?: string;
}
const { tight = false, class: className = '' } = Astro.props;

// Extract background class if provided in className, otherwise use bg-white
const hasBgClass = className.includes('bg-');
---
<div class={`${hasBgClass ? '' : 'bg-white'} rounded-2xl shadow-xl ${tight ? 'p-6' : 'p-8 md:p-10'} ${className}`}>
  <slot />
</div> 