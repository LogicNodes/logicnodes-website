---
// src/components/ContactSection.astro
// --------------------------------------------------------------
// "Kontakt" section
// – bg: ln.light
// – left column: dark card with contact details
// – right column: white card with form
// --------------------------------------------------------------
---
<section id="kontakt" class="bg-ln-light py-section px-gutter">
    <div
      class="max-w-7xl mx-auto grid gap-12
             lg:grid-cols-[minmax(0,45%)_minmax(320px,55%)] lg:items-start">
  
      <!-- ── Left: info card ───────────────────────────────────────── -->
      <div class="bg-ln-dark text-white rounded-2xl p-8 md:p-10 shadow-xl space-y-6">
        <h2 class="text-heading-lg leading-tight font-extrabold">
          Kom i kontakt med en<br />
          <span class="text-ln-accent">AI-ekspert</span>
        </h2>
  
        <p class="text-body">
          Udfyld formularen her, så kontakter en af vores AI-eksperter dig.
        </p>
  
        <ul class="space-y-3 text-body">
          <li class="flex items-center gap-3">
            <img src="/icons/email.svg" class="w-5 h-5" alt="" />
            <a href="mailto:email@gnail.com" class="hover:text-ln-accent">
              email@gnail.com
            </a>
          </li>
          <li class="flex items-center gap-3">
            <img src="/icons/phone.svg" class="w-5 h-5" alt="" />
            +45&nbsp;12&nbsp;34&nbsp;56&nbsp;78
          </li>
          <li class="flex items-center gap-3">
            <img src="/icons/location.svg" class="w-5 h-5" alt="" />
            Amaliegade&nbsp;45, 1.&nbsp;sal, København
          </li>
        </ul>
      </div>
  
      <!-- ── Right: form ───────────────────────────────────────────── -->
      <form
        class="bg-white rounded-2xl shadow-xl p-8 md:p-10 w-full space-y-6"
        name="kontakt"
        data-netlify="true"
        data-netlify-honeypot="bot-field"
      >
        <input type="hidden" name="form-name" value="kontakt" />
        <p class="hidden">
          <label>Don't fill this out: <input name="bot-field" /></label>
        </p>
  
        <!-- fields -->
        <div class="grid gap-4">
          <input
            required
            type="text"
            name="name"
            placeholder="Dit navn"
            class="border-b border-gray-300 focus:outline-none focus:border-ln-accent py-3 placeholder:text-ln-dark/70"
          />
          <input
            required
            type="email"
            name="email"
            placeholder="Din e-mail"
            class="border-b border-gray-300 focus:outline-none focus:border-ln-accent py-3 placeholder:text-ln-dark/70"
          />
          <input
            type="tel"
            name="phone"
            placeholder="Dit tlf. nr."
            class="border-b border-gray-300 focus:outline-none focus:border-ln-accent py-3 placeholder:text-ln-dark/70"
          />
          <input
            type="text"
            name="company"
            placeholder="Din virksomhed"
            class="border-b border-gray-300 focus:outline-none focus:border-ln-accent py-3 placeholder:text-ln-dark/70"
          />
          <textarea
            name="message"
            rows="3"
            placeholder="Besked"
            class="border-b border-gray-300 focus:outline-none focus:border-ln-accent py-3 placeholder:text-ln-dark/70 resize-none"
          />
        </div>
  
        <button
          type="submit"
          class="bg-ln-accent text-white font-semibold py-2.5 px-8 rounded-2xl
                 hover:bg-orange-500 transition self-start"
        >
          Send
        </button>
      </form>
    </div>
  </section>
  