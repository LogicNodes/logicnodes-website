---
const { class: className = '' } = Astro.props;
---
<div class={`relative w-full h-full ${className}`}>
  <svg
    viewBox="0 0 600 400"
    xmlns="http://www.w3.org/2000/svg"
    class="w-full h-full"
  >
    <!-- CONNECTIONS -->
    <line x1="80" y1="200" x2="180" y2="120" stroke="#3f495d" stroke-width="2" />
    <line x1="80" y1="200" x2="180" y2="200" stroke="#3f495d" stroke-width="2" />
    <line x1="80" y1="200" x2="180" y2="280" stroke="#3f495d" stroke-width="2" />

    <!-- NODES -->
    <!-- LogicNodes origin node -->
    <circle cx="80" cy="200" r="14" fill="#3f495d" />

    <!-- Connected active nodes -->
    <circle cx="180" cy="120" r="14" fill="#3f495d" class="interactive-node" />
    <circle cx="180" cy="200" r="14" fill="#3f495d" class="interactive-node" />
    <circle cx="180" cy="280" r="14" fill="#3f495d" class="interactive-node" />

    <!-- TODO: Icons inside nodes -->
    <!-- TODO: Click behavior and pulse propagation -->
  </svg>
</div>

