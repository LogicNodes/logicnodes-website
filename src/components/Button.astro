---
export interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
  size?: 'sm' | 'md';
  className?: string;
}

const { href, variant = 'primary', size = 'md', className } = Astro.props;

const base   = 'font-semibold rounded-2xl transition inline-block text-center';
const sizes  = { sm: 'py-2 px-4 text-sm', md: 'py-3 px-6' };
const styles = {
  primary:   `bg-ln-accent text-white hover:bg-orange-500`,
  secondary: `border-2 border-ln-accent text-ln-accent hover:bg-ln-accent hover:text-white`,
};
---
<a
  href={href}
  class={`${base} ${sizes[size]} ${styles[variant]} ${className}`.trim()}
>
  <slot />
</a> 