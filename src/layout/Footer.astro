---
// src/components/Footer.astro
import logoNameSvg from '@assets/logos/logo_name.svg?url';
---
<footer class="bg-ln-dark text-white px-gutter py-14">
    <div class="max-w-7xl mx-auto flex flex-col md:flex-row gap-12">
  
      <!-- ───── Left column – logo ────────────────────────────────── -->
      <div class="shrink-0 w-60">          <!-- adjust w-60 if you need -->
        <a href="/" class="block">
          <img src={logoNameSvg} alt="LogicNodes logo" class="h-28 w-auto" />
        </a>
      </div>
  
    <!-- ───── Right column – nav + contact line ─────────────────── -->
<!-- RIGHT COLUMN -->
    <div class="flex-1 flex flex-col">

        <!-- Nav : sits at the bottom of the column, 0.5 rem above the line -->
        <nav class="mt-auto mb-2 self-end">     <!--  ⇦  mb-2 instead of mb-4 -->
        <ul class="space-y-2 text-right">
            <li><a href="#specialloesninger"
                class="hover:text-ln-accent transition">Specialløsninger</a></li>
            <li><a href="#jobside"
                class="hover:text-ln-accent transition">Jobside</a></li>
            <li><a href="#videnscenter"
                class="hover:text-ln-accent transition">Videnscenter</a></li>
        </ul>
        </nav>
    
        <!-- Contact line -->
        <div
        class="flex flex-wrap gap-x-12 gap-y-2 text-sm text-white/80
                border-b border-ln-accent pb-4">
        <span>kontakt@logicnodes.ai</span>
        <span>CVR: 45318362</span>
        <span>+45&nbsp;40 90 62 13</span>
        </div>
    </div>
  </footer>  